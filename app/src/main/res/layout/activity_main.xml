<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.projetoquartaessevai.MainActivity">



    <ListView
        android:id="@+id/contato_lista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adicionar"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/adicionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Adicionar"
        />

    <Button
        android:id="@+id/procurar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Procurar" />

    <EditText
        android:id="@+id/procurar_texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/procurar"
        android:ems="10"
        android:hint="Procurar"
        android:inputType="textPersonName" />
</RelativeLayout>